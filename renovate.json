{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended"
    ],
    "automerge": false,
    "customManagers": [
      {
        "customType": "regex",
        "datasourceTemplate": "docker",
        "fileMatch": [
          "^.*\\.yaml$"
        ],
        "matchStrings": [
          "image: registry\\.lab\\.reisman\\.org\\/proxy\\.(?<depName>.+?):(?<currentValue>.+)"
        ]
      }
    ]
  }
